{% block nav %}
<li><a href="{{ path('admin_msi_user_user_index') }}">{{ 'User'|transchoice(2, {}, 'MsiUserBundle') }}</a></li>
<li><a href="{{ path('admin_msi_menu_root_index') }}">{{ 'Menu'|transchoice(2, {}, 'MsiMenuBundle') }}</a></li>
