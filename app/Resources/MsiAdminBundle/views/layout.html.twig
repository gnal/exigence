        <li><a href="{{ path('fos_user_security_logout') }}"><i class="icon-off"></i> {{ 'Logout'|trans({}, 'MsiAdminBundle') }}</a></li>
    </ul>
</li>
<li><a target="_blank" href="{{ path('homepage') }}">{{ 'View site'|trans({}, 'MsiAdminBundle') }}</a></li>
{% endif %}
